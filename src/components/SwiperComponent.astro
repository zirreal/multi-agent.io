---
import { Swiper, SwiperWrapper, SwiperPagination} from "astro-swiper";
---
<Swiper
  options={{ 
    speed: 400,
    slidesPerView: 1,
    slidesPerGroup: 1,
    grid: {
      rows: 1,
    },
    spaceBetween: 32,
    fadeEffect: {
      crossFade: true,
    },

    pagination: {
      el: ".swiper-pagination",
    },

    keyboard: {
      enabled: true,
      onlyInViewport: true,
      pageUpDown: true,
    },

    a11y: {
      prevSlideMessage: 'Previous',
      nextSlideMessage: 'Next',
    }
  }}>
  <SwiperWrapper>
    <slot/>
  </SwiperWrapper>

  <SwiperPagination />
</Swiper>

<style>
  .swiper {
    max-width: 1600px;
  }

  img {
    width: 100%;
  }
</style>