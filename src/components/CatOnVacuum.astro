---
import { Image } from 'astro:assets';
import CAT from '../assets/img/cat.webp';
---

<div class="home-page__cat">
  <Image src={CAT} alt="" aria-hidden="true"/>
</div>

<style>
  .home-page__cat {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .home-page__cat img {
    position: absolute;
    bottom: 0;
    display: block;
    margin: 0 auto;
    max-width: 200px;
    left: -100px;
    will-change: transform;
    animation: moveVacuum 6s infinite ease-in-out;
    -webkit-transform: translateX(-150%);
    animation: moveVacuum 6s ease-in-out infinite;
    animation-direction: alternate;
  }

  @keyframes moveVacuum {
    0% {
      left: -100px;
      transform: translateX(-100%) 
    }
    40% {
      left: 50%;
      transform: translateX(-50%); 
    }
    50% {
      left: 50%; 
      transform: translateX(-50%); 
    }
    60% {
      left: 50%; 
      transform: translateX(-50%); 
    }
    100% {
      left: 100%;
      transform: translateX(100%) 
    }
  }

</style>