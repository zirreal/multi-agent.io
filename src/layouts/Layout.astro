---
// Components
import Header from '../components/Header.vue';
import Footer from '../components/Footer.astro';
import CookieConsent from '../components/CookieConsent.astro';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  pageImageWidth?: string;
  pageImageHeight?: string;
  isDark?: boolean;
}

// Extract site metadata
const { 
  title = 'YourSpace', 
  description = '', 
  ogImage, 
  pageImageWidth = '1280', 
  pageImageHeight = '765', 
	isDark = false,
} = Astro.props as Props;

// Import styles
import '../assets/styles/main.css';
import Cookies from '@/pages/cookies.astro';
---

<!doctype html>
<html lang="ru" dir="ltr">
<head>
	<meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />

	<title>{title}</title>
	<meta name="description" content={description}>

  <link rel="preload" as="font" href="/fonts/RobotoFlex-VariableFont.woff2" type="font/woff2" crossorigin />

	<!-- Open Graph Metadata -->
	<meta property="og:title" content={title}>
	<meta property="og:description" content={description}>
	<meta property="og:type" content="website">
	<meta property="og:url" content="">
	<meta property="og:image" content={ogImage}>
	<meta property="og:image:width" content={pageImageWidth}>
	<meta property="og:image:height" content={pageImageHeight}>
	<meta property="og:site_name" content="YourSpace">
	
	<!-- Twitter Metadata -->
	<meta name="twitter:card" content="summary_large_image">
	<meta name="twitter:url" content="">
	<meta name="twitter:title" content={title}>
	<meta name="twitter:description" content={description}>
	<meta name="twitter:image" content={ogImage}>
</head>
	<body transition:animate="fade" class:list={[{dark: isDark}]}>
      <main class="main">
        <Header client:load/>
         <slot />
         <Footer/>
      </main>

			<CookieConsent/>
	</body>
</html>